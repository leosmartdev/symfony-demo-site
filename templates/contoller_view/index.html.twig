{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<style>
    .admin_table th, .admin_table td {
        text-align: center;
    }  

    .admin_header {
        display: flex;
        padding-right: 13px;
        padding-left: 15px;
        /* width:100% */
    }

    .createUser {
        display: flex;
        align-items: center;
        justify-content: right;
        padding-right: 15px;
    }

    .controllerPage {
        padding-left: 15px;
        padding-right: 15px;
    }
</style>
<div class="controllerPage">
    <div class="admin_header">
        <h1 class="col-sm-6">{{'action.User_Management'|trans}}</h1>
        <div class="createUser col-sm-6">
            <a href="{{ path('contoller_view_new') }}"  class="btn btn-sm btn-success">
                <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create'|trans }}
            </a>
        </div>
    </div>

    <table class="table table-striped table-middle-aligned admin_table admin_table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'label.name'|trans }}</th>
                <th>{{ 'label.Surname'|trans }}</th>
                <th>{{'label.username'|trans}}</th>
                <th>{{'label.email'|trans}}</th>
                <!-- <th>Password</th> -->
                <th>{{'label.role'|trans}}</th>
                <th>{{'label.Add_User'|trans}}</th>
                <th>{{'label.Update_User'|trans}}</th>
                <th>{{'label.Create_at'|trans}}</th>
                <th>{{'label.Update_at'|trans}}</th>
                <th>{{'label.Country'|trans}}</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% set i = 0 %}

        {% for user in users %}
            <tr>
                <td>
                    {% set i = i + 1 %}
                    {{i}}
                </td>
                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <!-- <td>{{ user.password }}</td> -->
                <td>
                    {{ user.roles|trim('"[]"') }}
                </td>
                <td>{{ user.add_user }}</td>
                <td>{{ user.update_user }}</td>
                <td>{{ user.create_at ? user.create_at|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.update_at ? user.update_at|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.country }}</td>
                <!-- <td>
                    <a href="{{ path('contoller_view_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('contoller_view_edit', {'id': user.id}) }}">edit</a>
                </td> -->
                <td class="text-right">
                    <div class="item-actions"></div>
                        <!-- <a href="{{ path('contoller_view_show', {'id': user.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}
                        </a> -->
                        <a href="{{ path('contoller_view_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <!-- <a href="{{ path('contoller_view_new') }}">Create new</a> -->
{% endblock %}
